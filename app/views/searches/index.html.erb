<div id="search">
  <h1>Where Are They (Literally) Right Now?</h1>
  <h4>Ever wondered what the actors from your favorite movies are up to now? Find out!</h4>
  <br>
  <%= form_for(@search, remote: true) do |f| %>
    <div class='input-group'>  
      <%= f.text_field :movie_search, id: 'movie_search', placeholder: 'Enter a movie title!', class: "form-control" %>
      <span class="input-group-btn">
        <%= f.submit "Search", class: 'btn btn-primary' %>
      </span>
    </div>
  <% end %>
  <br><br>
</div>

<div id="movie-section">
  <div id="movie-scroll"></div>
  <div id='movie' class='horizontal-scroll'></div>
</div>

<div id="cast-section">
  <div id="actor-scroll"></div>
  <div id="cast" class='horizontal-scroll'></div>
</div>

<div id="info-section">
  <div id="sources" class="text-center"></div>
</div>